.span12
  .module-header.sponsors-header
    %h4= t('section.sponsors')
.span12.hero-unit.text-center
  %h2= t('sponsors.slogan')
  %p
    %strong
      = t('sponsors.join_us')
  %p
    = link_to t('sponsors.link.text'), t('sponsors.link.url')

.divider-space

#gold.text-center
  .span12#microsoft_openness
    .span6
      .sponsor-description{style: 'margin-top: 5em; margin-bottom: 1em;'}
        - I18n.t('sponsors.sponsors.gold.microsoft_openness.description').each do |paragraph|
          %p= paragraph
    .span5
      = link_to 'http://www.microsoft.com/en-us/openness/default.aspx', target: :blank do
        = image_tag('/assets/sponsors/logo/microsoft_openness.png')
  .span12#selleo
    .span5
      = link_to 'http://selleo.com/', target: :blank do
        = image_tag('/assets/sponsors/logo/selleo.png')
    .span6
      .sponsor-description{style: 'margin-top: 5em; margin-bottom: 1em;'}
        - I18n.t('sponsors.sponsors.gold.selleo.description').each do |paragraph|
          %p= paragraph
#silver.text-center
  .span6#travis
    = link_to 'http://travis-ci.com/', target: :blank do
      = image_tag('/assets/sponsors/logo/travis.png')
  .span6#rekord
    = link_to 'http://www.rekord.com.pl/', target: :blank do
      = image_tag('/assets/sponsors/logo/rekord.png')

#bronze.text-center
  .span4#jetbrains
    = link_to 'http://jetbrains.com', target: :blank do
      = image_tag('/assets/sponsors/logo/jetbrains.png')
  .span4#helion
    = link_to 'http://helion.pl', target: :blank do
      = image_tag('/assets/sponsors/logo/helion.png')
  .span4#aip
    = link_to 'http://przedsiebiorca.pl/aip/', target: :blank do
      = image_tag('/assets/sponsors/logo/aip.png')
  .span4.offset4#codeschool
    = link_to 'https://www.codeschool.com/', target: :blank do
      = image_tag('/assets/sponsors/logo/codeschool.png')

.span12
  .module-header.sponsors-header
    %h4= t('section.media')
  #media.text-center
    .span2
    - { 'http://programistamag.pl/' => 'magazyn.programista.png',
        'http://www.bb365.info/' => 'bb365info.png' }.each do |url, picture|
      .span4
        = link_to url, target: :blank do
          = image_tag("/assets/media/logo/#{picture}")
